@using SV20T1080003.Web
@using SV20T1080003.Web.AppCodes;
@model SV20T1080003.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box box-body">
        <form action="~/Admin/Supplier/Save" method="post">
            @Html.HiddenFor(m => m.SupplierID)
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                @Html.TextBoxFor(m => m.SupplierName, new {@class="form-control", @autofocus="autofocus"})
                @Html.ValidationMessageFor(m => m.SupplierName, "", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                @Html.TextBoxFor(m => m.ContactName, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.ContactName, "", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                @Html.TextBoxFor(m => m.Address, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Address, "", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label>
                @Html.DropDownListFor(m => m.Provice, SelectListHelper.Provinces(), new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Provice, "", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Phone, "", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(m => m.Email, new {@class="form-control", @type="email"})
                @Html.ValidationMessageFor(m => m.Email, "", new {@style="color:red"})
            </div>
            
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>

            <a href="~/Admin/Supplier" class="btn btn-default">Quay lại</a>
        </form>
    </div>
</div>