@model SV20T1080003.DomainModels.ProductPhoto
@{

}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form action="~/Admin/Product/SavePhoto" class="form-horizontal" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(m => m.PhotoId)
            @Html.HiddenFor(m => m.ProductId)
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    @Html.HiddenFor(m => m.Photo)
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img src="~/images/productphotos/@Model.Photo" class="img img-bordered" style="width:150px" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new {@class="form-control"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = "color: #f00;" })
                    @if (Model.PhotoId > 0)
                    {
                        @Html.TextBoxFor(m => m.DisplayOrder, new { @class="form-control", type = "number"})
                    }
                    else
                    {
                        <input type="number" min="1" class="form-control" name="DisplayOrder" />
                    }
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.IsHidden)
                        Ẩn ảnh (không hiển thị với khách hàng)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Admin/Product/Edit/@Model.ProductId">
                        <i class="fa"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>



