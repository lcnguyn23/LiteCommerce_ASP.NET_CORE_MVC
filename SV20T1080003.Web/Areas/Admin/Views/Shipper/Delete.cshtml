@model SV20T1080003.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa người giao hàng";
}


<div class="box box-danger">
    <div class="box box-body">
        <form action="~/Admin/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <p class="form-control-static" style="border-bottom: 1px dotted #646464">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static" style="border-bottom: 1px dotted #646464">@Model.Phone</p>
            </div>


            <button type="submit" class="btn btn-danger">
                <i class="fa fa-remove"></i>
                Xóa dữ liệu
            </button>

            <a href="~/Admin/Shipper" class="btn btn-default">Quay lại</a>
        </form>
    </div>
</div>