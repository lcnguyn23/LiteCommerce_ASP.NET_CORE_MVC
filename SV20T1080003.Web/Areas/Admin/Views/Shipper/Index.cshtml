@model SV20T1080003.Web.Models.PaginationSearchInput
@{
    ViewBag.Title = "Danh sách người giao hàng";
}


<div class="box box-primary">
    <div class="box-body">
        <!-- Form tìm kiếm -->
        <form id="formSearchInput" action="~/Admin/Shipper/Search" method="get" class="sidebar-form">
            <div class="input-group">
                @Html.HiddenFor(m => m.PageSize)
                <input type="text" name="searchValue" value="@Model.SearchValue" class="form-control" style="background-color: #fff" placeholder="Nhập tên nhà cung cấp cần tìm...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" style="background-color: lightgray" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Admin/Shipper/Create" class="btn btn-flat btn-primary" style="background-color:#337AB7; color: white">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </span>
            </div>
        </form>

        <div id="searchResult">
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#formSearchInput").submit(function (e) {
                e.preventDefault()
                doSearch()
                return
            })
            doSearch(@Model.Page)
        })

        function doSearch(page) {
            var url = $("#formSearchInput").prop("action")
            var postData = $("#formSearchInput").serializeArray()
            postData.push({ "name": "page", "value": page })

            $.ajax({

                url,
                type: "POST",
                data: postData,
                error: function (error) {
                    alert("Your request is not valid!")
                },
                success: function (data) {
                    $("#searchResult").html(data)
                }
            })
        }


    </script>
}